{
  "manifest_version": 3,
  "name": "AI Context Bridge",
  "version": "1.0",
  "description": "Chrome extension to bridge webpage content to AI services",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_global.js"]
    },
    {
      "matches": ["*://chat.openai.com/*"],
      "js": ["content_chatgpt.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}